@import url(http://font.googleapis.com/earlyaccess/nanumgothic.css);
/* 전체 영역 지정 */
* {
    font-family: 'Nanum Gothic';
}
/* 전체 링크 영역 지정 */
a {
    color: #000000;
    text-decoration: none;
}
a:hover{
    color: #bbbbbb;
    text-decoration:none;
    cursor: pointer;
}

/* 네비게이션 영역 */
.navbar-default{    /* 배경 색상*/
    background-color: #006DCC;
    border-color: #006DCC;
    border-bottom-color: #dddddd;
    border-bottom-width: 3px;
    border-radius: 0px;
}
.navbar-default .navbar-brand{ /* 내비게이션 제목 생상 */
    color: #ffffff;
}
.navbar-default .navbar-brand:hover,
.navbar-default .navbar-brand:focus{ /*내비게이션 제목에 마우스를 올렸을 때 */
    background-color: transparent;
    color: #bbbbbb;
}
.navbar-default .navbar-nav > .active > a,
.navbar-default .navbar-nav > .active > a:hover,
.navbar-default .navbar-nav > .active > a:focus{/* 현재 선택된 내비게이션 색상 이벤트 */
    color: #ffffff;
    background-color: #1456b8;
}
.navbar-default .navbar-nav > li > a:hover,
.navbar-default .navbar-nav > li > a:focus { /*내비게이션의 글자에 마우스를 올렸을 때 */
    color: #bbbbbb;
}
.navbar-default .navbar-nav > .open > a,
.navbar-default .navbar-nav > .open > a:hover,
.navbar-default .navbar-nav > .open > a:focus{ /* .open 드랍다운이 열렸을 때 마우스 색상 이벤트  */
    color: black;
    background-color: #ffffff;
    text-decoration: none;
}
.navbar-default .navbar-nav > li > a { /*내비게이션 기본 글자 색상 */
    color: white;
}
/* 미디어 쿼리 */
@media (max-width: 767px) { /* (해상도가 작아졌을때) 드랍다운 아이템에 마우스를 올렸을 때 */
    .navbar-default .navbar-nav .open .dropdown-menu > li > a {
        color: #ffffff;
    }
    .navbar-default .navbar-nav .open .dropdown-menu > li > a:hover,
    .navbar-default .navbar-nav .open .dropdown-menu > li > a:focus {
        color: #bbbbbb;
    }
}